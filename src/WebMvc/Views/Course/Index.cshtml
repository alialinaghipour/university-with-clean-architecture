@model List<Application.ViewModels.Course.GetCoursesViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container body-content">
    <div class="row course-content">
        @foreach (var course in Model!)
        {
            <div class="course-image-container">
                <a asp-action="ShowCourse" asp-route-id="@course.Id">
                    <div class="course-image" style="background-image: url(@course.ImageUrl)"></div>
                </a>
            </div>
            <span>@course.Name</span>
        }
    </div>
</div>